<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/light_green</item>
        <item name="colorPrimaryDark">@color/dark_green</item>
        <item name="colorAccent">@color/red</item>
        <item name="android:statusBarColor">@color/black_lighter_20</item>
        <item name="android:actionMenuTextColor">@android:color/white</item>

    </style>

    <style name="Text1" parent="@style/TextAppearance.AppCompat.Title">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextDialogTitle" parent="@style/TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/light_green</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextDark" parent="@style/TextAppearance.AppCompat.Title">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="UnitsText" parent="@style/TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/light_grey</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="ToolbarColoredBackArrow" parent="AppTheme">
        <item name="android:textColorSecondary">@android:color/white</item>
    </style>

</resources>
